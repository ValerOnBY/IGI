@model Weapon_Shop.Feature.Authentication.SignUp.Command

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">
    <title></title>
    <meta name="description" content="Login and Register Form Html Template">

    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:300,300i,400,400i,500,500i,700,700i,900,900i' type='text/css'>

    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="vendor/font-awesome/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="css/stylesheet.css" />
</head>
<body>

    <!-- Preloader End -->

    <div id="main-wrapper" class="oxyy-login-register h-100 d-flex flex-column bg-transparent">
        <div class="container my-auto">
            <div class="row no-gutters h-100">
                <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4 m-auto py-5">
                    <p class="lead text-center mb-3">Похоже ты у нас новенький!</p>
                    <form id="registerForm" method="post">
                        <div class="vertical-input-group">
                            <div class="input-group">
                                <input type="email" class="form-control" id="emailAddress" required placeholder="Full Name" asp-for="UserName">
                            </div>
                            <div class="input-group">
                                <input type="email" class="form-control" id="emailAddress" required placeholder="Email Address" asp-for="Email">
                            </div>
                            <div class="input-group">
                                <input type="password" class="form-control" id="loginPassword" required placeholder="Password" asp-for="Password">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block shadow-none my-4" type="submit" asp-action="SignUp">Создать Аккаунт</button>
                    </form>
                    <p class="text-center text-muted mb-3">Уже есть аккаунт? <a class="btn-link" asp-action="signin" asp-controller="Authentication">Log In</a></p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}